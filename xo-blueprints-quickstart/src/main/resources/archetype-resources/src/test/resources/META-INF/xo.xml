<v1:xo version="1.0" xmlns:v1="http://buschmais.com/xo/schema/v1.0">
    <xo-unit name="${artifactId}">
        <description></description>
        <url>file:${artifactId}</url>
        <provider>com.smbtec.xo.tinkerpop.blueprints.api.TinkerPopXOProvider</provider>
        <types>
            <type>${package}.domain.Group</type>
            <type>${package}.domain.Principal</type>
            <type>${package}.domain.User</type>
        </types>
        <validation-mode>NONE</validation-mode>
        <concurrency-mode>SINGLETHREADED</concurrency-mode>
        <default-transaction-attribute>MANDATORY</default-transaction-attribute>

        <properties>
            <property name="blueprints.graph" value="com.tinkerpop.blueprints.impls.tg.TinkerGraph"/>
        </properties>

    </xo-unit>
</v1:xo>
